<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <title>@ViewBag.Title - Have I Cubed This Yet?</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top"  id ="header-overlay">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Weapons", "Index", "Weapons")</li>
                    <li>@Html.ActionLink("Armors", "Index", "Armors")</li>
                    <li>@Html.ActionLink("Jewelry", "Index", "Jewelry")</li>
                    <li>@Html.ActionLink("Settings", "Index", "Settings")</li>
                </ul>
            </div>
        </div>
    </div>
<div class="container body-content">
    <div>
        @RenderSection("BreadCrumb", false)
    </div>
    <div style="text-align: center">
        <div id="seasonal" class="progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="0"
                 aria-valuemin="0" aria-valuemax="100">
                <span class="progress-text">0% Complete</span>
            </div>
        </div>
        <div id="non-seasonal" class="progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="0"
                 aria-valuemin="0" aria-valuemax="100">
                <span class="progress-text">0% Complete</span> 
            </div>
        </div>
        <div id="all" class="progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="0"
                 aria-valuemin="0" aria-valuemax="100">
                <span class="progress-text">0% Complete</span>
            </div>
        </div>
    </div>
    @RenderBody()
    <hr/>
</div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/items")
    @RenderSection("scripts", required: false)
    
</body>
</html>
